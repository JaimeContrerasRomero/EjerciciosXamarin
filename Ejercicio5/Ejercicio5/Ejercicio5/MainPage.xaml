<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Ejercicio5"
             x:Class="Ejercicio5.MainPage"
             Title="Navegacion Web">

    <StackLayout Margin="20">
        <!-- Place new controls here -->
        <Label Text="Ejercicio 5" 
           HorizontalOptions="Center" />

        <Button Text="Facebook" 
                BackgroundColor="Blue" 
                TextColor="White"
                Clicked="Button_Clicked"></Button>
        
        <Button Text="Twitter"
                BackgroundColor="Cyan"
                TextColor="White"
                Clicked="Button_Clicked_1"></Button>

        <Button Text="Whatsapp"
                BackgroundColor="GreenYellow"
                TextColor="White"
                Clicked="Button_Clicked_2"></Button>

        <Button Text="Youtube"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="Button_Clicked_3"></Button>

        <Button Text="Gmail"
                BackgroundColor="White"
                TextColor="Red"
                Clicked="Button_Clicked_4"></Button>

        <Button Text="Handgous"
                BackgroundColor="Green"
                TextColor="White"
                Clicked="Button_Clicked_5"></Button>
        
    </StackLayout>

</ContentPage>
